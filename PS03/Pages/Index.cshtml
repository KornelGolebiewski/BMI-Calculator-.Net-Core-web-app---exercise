@page
@model PS03.Pages.IndexModel
@{

    ViewData["Title"] = "BMI Calculator Main Page";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>BMICalculatorMainPage</title>
    <style>
        .submit {
            background: #98D06A;
            color: #fff;
            border: 1px solid #fff;
            height: 50px;
            width: 100px;
            border-radius: 20px;
        }
        .submit:hover {
                background-color: #70B244
            }

    </style>


</head>
<body>
    <h1>BMI Calculator</h1>
    <form method="post">
        <b>
            Welcome to my BMI Calculator. Try it yourself!
        </b><br /><br />
        <p style="font-size: 25px">To check your BMI click Continue</p><br />

        <button class="submit">Continue</button>

    </form>



</body>
</html>